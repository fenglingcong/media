/* pages/review/movie-grid/movie-grid-template.wxss */
@import "../movie/movie-template.wxss";

/*scroll-view*/

.list {
  width: 100%;
  height: 100%;
  margin:40rpx 9rpx 0rpx 9rpx;
  position: relative;
  padding-bottom:92rpx;
}
.list .loadmore_template{
   position: absolute;
  width: 100%;
  bottom: 0; 
}
.single-view-container {
  float: left;
  margin-bottom: 20rpx;
}
.abnor__box {
  position: absolute;
  display: flex;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.abnor__image {
  width: 514rpx;
  background: transparent no-repeat;
  background-size: cover;
}
.abnor__text {
  margin-top: 30rpx;
  color: #333;
  font-size: 28rpx;
}